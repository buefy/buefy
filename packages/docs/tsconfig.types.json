{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "../buefy-next/src/**/*",
    "../buefy-next/src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "src/assets/*",
    "../buefy-next/src/**/*.spec.*",
    "../buefy-next/node_modules"
  ],
  "compilerOptions": {
    "rootDirs": [
      "./src",
      "../buefy-next/src"
    ],
    "paths": {
      "buefy": [
        "../buefy-next/src"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  }
}